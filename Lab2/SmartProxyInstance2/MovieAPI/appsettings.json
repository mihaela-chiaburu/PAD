{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${POSTGRES_HOST};Port=5432;Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}"
  },
  "SyncServiceSettings": {
    "Host": "${SYNCNODE_URL}/sync",
    "DeleteHttpMethod": "DELETE",
    "UpsertHttpMethod": "PUT"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:${PORT}"
      }
    }
  }
}
